<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>

<%= form_for @character do |f| %>
  <%= f.label  :name %>
  <%= f.text_field :name%>

  <%= f.label :actor %>
  <%= f.text_field :actor %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<%end%>
